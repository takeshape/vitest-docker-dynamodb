{
  "name": "@takeshape/vitest-docker-dynamodb",
  "version": "0.1.5",
  "description": "Bootstrap vitest tests with docker-compose and dynamodb.",
  "keywords": [
    "vitest",
    "dynamodb",
    "docker",
    "docker-compose",
    "setup",
    "teardown",
    "testing",
    "fixtures"
  ],
  "homepage": "https://github.com/takeshape/vitest-docker-dynamodb",
  "repository": "github:takeshape/vitest-docker-dynamodb",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.848.0",
    "@aws-sdk/util-dynamodb": "^3.848.0",
    "docker-compose": "^1.3.0"
  },
  "peerDependencies": {
    "vitest": ">=3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^22.16.4",
    "del-cli": "^6.0.0",
    "np": "^10.2.0",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@10.9.3",
  "scripts": {
    "build": "tsc",
    "clean": "del-cli dist *.tsbuildinfo",
    "test": "biome check --error-on-warnings && tsc --noEmit",
    "prepare": "npm run build",
    "release": "npm run test && npm run build && np --no-tests --no-publish"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
